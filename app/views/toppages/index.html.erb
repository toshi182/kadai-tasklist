<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@user) do |f|  %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
          <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
    </aside>
    <div class="col-xs-8">
      <table class="table">
        <tr>
          <th>ID</th>
          <th>内容</th>
          <th>状態</th>
          <th>操作</th>
        </tr>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
            <td><%= link_to "詳細", task %> <%= link_to "編集", edit_task_path(task) %> <%= link_to "削除", task, method: :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
