<h1>id: <%= @tasks.id %> のタスク編集ページ</h1>

<%= render 'form', task: @tasks %>

<%= form_for(@tasks) do |f| %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', task_path %>
<%= link_to 'このタスクを編集する', edit_task_path(@tasks) %>
